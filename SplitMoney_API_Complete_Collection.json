      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"appKey\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login", ""]
            },
            "description": "Admin login - returns JWT token directly. Set appKey=1 for admin-only authentication.",
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    var jsonData = pm.response.json();",
                    "    pm.environment.set(\"access_token\", jsonData.access_token);",
                    "    pm.test(\"Token saved to environment\", function() {",
                    "        pm.expect(jsonData.access_token).to.exist;",
                    "    });",
                    "}"
                  ]
                }
              }
            ]
          },
          "response": []
        },
        {
          "name": "Non-Admin Login",
